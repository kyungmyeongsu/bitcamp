<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <!-- IoC 콤테이너가 생성해야할 객체에 대한 정보 설정하기
         => IoC 컨테이너는 다음 태그를 보고 설정된 정보에 따라 객체를 생성한다.
     -->
     
     <!-- id: 생성된 객체를 컨테이너에 보관할 때 사용할 key
          class: 생성할 객체의 클래스 정보. 
          반드시 fully-qualified class name(FQName, QName) 이어야 한다. -->
    <bean id="c1" class="bitcamp.java106.step02.Car"/>
    
    <!-- 시작태그와 끝 태그 사이에 내용이 없다면 끝 태그를 생략할수 있다.
        단 생략을 표시하기위해 반드시 시작 태크의 끝에 /을 붙여라 -->
    <bean id="c2" class="bitcamp.java106.step02.Car"/>
</beans>